@model CategoryListVM

<h2>Kategoriler</h2>

<div class="list-group">
    <a href="/product/index" class="list-group-item"><h3>Tüm Ürünler</h3></a>

    @foreach (var category in Model.Categories)
    {
        var css = "list-group-item";
        if (category.CategoryId==Model.CurrentCategory)
        {
            css += " active bg-dark";
        }
        <a href="/product/index?category=@category.CategoryId" class="@css">@category.CategoryName</a>
    }

</div>

